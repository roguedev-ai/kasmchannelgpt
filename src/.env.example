# CustomGPT API
CUSTOMGPT_API_KEY=your-key-here
CUSTOMGPT_BASE_URL=https://app.customgpt.ai/api/v1

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_TIMEOUT=30000

# Embedding Provider (openai or gemini)
EMBEDDING_PROVIDER=openai

# OpenAI API (required if using OpenAI embeddings)
# If not provided, will fall back to CUSTOMGPT_API_KEY
OPENAI_API_KEY=sk-your-key-here

# Google Gemini API (required if using Gemini embeddings)
GEMINI_API_KEY=your-key-here

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=txt,pdf,doc,docx

# Authentication
JWT_SECRET=your-secret-here
